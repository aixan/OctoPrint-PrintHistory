<form class="form-horizontal">
    <h3>Spool inventory</h3>

    <div class="row-fluid">
        <div class="span4"><h4>Name</h4></div>
        <div class="span3"><h4>Price</h4></div>
        <div class="span3"><h4>Currency</h4></div>
    </div>
    <div data-bind="foreach: spool_inventory">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span6">
                <input type="text" class="span12" data-bind="value: name">
            </div>
            <div class="span2">
                <input type="number" class="span12 text-right" data-bind="value: price">
            </div>
            <div class="span2">
                <select class="span12" data-bind="options: $root.availableCurrencies, value: currency"></select>
            </div>
            <div class="span2">
                <a title="Remove spool" class="btn btn-danger" data-bind="click: $parent.removeSpool"><i class="icon-trash"></i></a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset10 span2">
            <a title="Add spool" class="btn btn-primary" data-bind="click: addNewSpool"><i class="icon-plus"></i></a>
        </div>
    </div>
</form>